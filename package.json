{
  "name": "serverless-todo-code-challenge",
  "version": "1.0.0",
  "description": "A basic todo app in serverless framework with API Gateway, Lambda and DynamoDB",
  "scripts": {
    "start:dev": "serverless offline start --verbose",
    "start:debug": "SLS_DEBUG=* node --inspect ./node_modules/.bin/serverless offline -s dev",
    "setup:dynamo": "serverless dynamodb install",
    "test": "./node_modules/.bin/jest --ci --verbose",
    "test:watch": "ENV=test ./node_modules/.bin/jest --ci --verbose --watch",
    "test:coverage": "./node_modules/.bin/jest --ci --verbose --coverage",
    "lint": "eslint --fix --ignore-path .gitignore '**/*.ts'",
    "prepare": "npm run setup:dynamo"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "middy": "^0.24.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.95",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/serverless": "^3.12.9",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "aws-lambda": "^1.0.7",
    "esbuild": "^0.25.2",
    "esbuild-visualizer": "^0.3.1",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-module-resolver": "^1.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.0.3",
    "prettier": "^2.6.2",
    "serverless": "^3.40.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-dynamodb": "^0.2.56",
    "serverless-esbuild": "^1.33.2",
    "serverless-offline": "^13.9.0",
    "serverless-prune-plugin": "^2.0.1",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
